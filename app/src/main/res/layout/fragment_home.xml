<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D5A253">

    <android.support.v7.widget.Toolbar
        android:id="@+id/home_toolbar"
        style="@style/HeaderBar"
        android:elevation="4dp"
        android:background="@color/Wooden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/home_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ico_back"
            android:visibility="gone"
            />

        <TextView
            android:text="Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor = "#FFFFFF"
            android:gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--<TextView-->
                <!--android:layout_width="384sp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_weight="1"-->
                <!--android:hint="Home"-->
                <!--android:paddingLeft="150dp"-->
                <!--android:textColorHint="#FFFFFF"-->
                <!--android:textSize="30sp"-->
                <!--android:textStyle="bold" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ico_search"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/home_search_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search here"
                    android:textColorHint="#F5F5F5"
                    android:layout_weight="3"/>

                <ImageView
                    android:id="@+id/home_refresh_button"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ico_reset"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/home_search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/login_btn"
                    android:text="Search"
                    android:textColor="#F5F5F5" />

                <Button
                    android:id="@+id/home_advance_search"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_btn"
                    android:text="Advance search"
                    android:textColor="#F5F5F5" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/home_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.ProgressBar"
                android:visibility="gone"
                android:layout_gravity="center"/>

            <ListView
                android:id="@+id/home_lec_note_list"
                android:layout_width="300dp"
                android:layout_height="325dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_result_border"
                android:paddingLeft="16dp"/>

            <Button
                android:id="@+id/home_upload_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/login_btn"
                android:hint="Upload"
                android:textColorHint="#F5F5F5" />

            <Button
                android:id="@+id/home_log_out_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/login_signup"
                android:hint="Sign out"
                android:textColorHint="#FFFFFF" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
