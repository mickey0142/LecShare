<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/comment_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20dp"/>

    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time" />
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="normal content"
        android:textSize="15dp"
        android:textColor="#000"/>

    <Button
        android:id="@+id/comment_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit"
        android:layout_marginBottom="5dp"
        android:layout_gravity="end"
        android:textColor="#fff"
        android:background="@drawable/button_box"/>

    <EditText
        android:visibility="gone"
        android:id="@+id/comment_edit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="What do you think?" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/comment_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:visibility="gone"
        android:id="@+id/comment_edit_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_box"
        android:textColor="#fff"
        android:text="Update" />

    <Button
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:background="@drawable/button_box"
        android:textColor="#fff"
        android:id="@+id/comment_edit_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel" />

</LinearLayout>